#!/usr/bin/env ruby
# -*- coding: utf-8 -*-
require 'rubygems'
## $:.unshift File.dirname(__FILE__)+'/../lib/'

require 'gyazz-markup'

input, base = ARGV[0..1]
unless input
  STDERR.puts "gyazz-markup input.txt"
  STDERR.puts "gyazz-markup input.txt 増井"
  exit 1
end

puts GyazzMarkup.markup(open(input).read, base)
