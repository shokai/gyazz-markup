#!/usr/bin/env ruby
# -*- coding: utf-8 -*-
$:.unshift File.expand_path '../lib', File.dirname(__FILE__)
require 'rubygems'

require 'gyazz-markup'

input, wiki = ARGV[0..1]
unless input
  STDERR.puts "== gyazz-markup v#{GyazzMarkup::VERSION}"
  STDERR.puts
  STDERR.puts "  % gyazz-markup input.txt"
  STDERR.puts "  % gyazz-markup input.txt WIKINAME"
  exit 1
end

puts GyazzMarkup::Markup.new(:wiki => wiki).markup(open(input).read)
